<div id="detail_issue" title="Detail Issue #<%= @issue.id%>">
  <% if !User.current.anonymous? && @id_member.include?(User.current.id) || User.current.admin %>
    <%= render :partial => 'form', :locals => {:issue => @issue, :priorities => @priorities, :relations => @relations, :allowed_statuses => @allowed_statuses, :edit_allowed => @edit_allowed} %>
  <% end %>
  <div class="detail_issue issue">  
    <%= render :partial => 'issue', :locals => {:issue => @issue} %>
  </div>
  <fieldset><legend>Comment</legend>
    <%= render :partial => 's2b_comment/form_new' %>
  </fieldset>
  <% if !@comments.blank? %>
    <div id="comment">
    <h3><%=l(:label_comment)%></h3>
     <% @comments.each do |comment| %>
      <%= render :partial => 's2b_comment/show', :locals => { :comment => comment } %>
      <% end %>
    </div>
  <% end %>
</div>

<style>
  .form_edit_issue {
    display:none;
  }
</style>
