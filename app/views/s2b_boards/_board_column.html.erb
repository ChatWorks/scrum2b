<p class="status">
  <%= column_name %>
</p>
<% is_editable = session[:roles_edit] %>
<% if column_id == :new_column && is_editable %>
  <img src="/plugin_assets/scrum2b/images/Add.ico" style="float: right;cursor: pointer;" title="<%= l(:label_board_issue_new_issue)%>" class="icon_new_issue icon">
  <li id="new_issue_form" style="list-style: none !important;">
    <%= render(:partial => "issue", :locals => { :issue => Issue.new, :column => column_id, :show_for => :create_new }) %>
  </li>
<% end %>
<% if is_editable == true %>
  <div class="connectedSortable ui-sortable" status="<%= status %>">
<% else %>
  <div class="not-connectedSortable ui-sortable" status="<%= status %>">
<% end %>
  <% issues.each do |issue| %>
      <%= render(:partial => "issue", :locals => { :issue => issue, :column => column_id, :show_for => is_editable ? :show_and_edit : :show }) %>
  <% end if issues %>
</div>
