<div class="view_issue" id="issue_list_<%= issue.id %>">
	<table id="list_issues" class="list_issue">
		<tr>
			<td class="check_id"><input name="check" type="checkbox" value="<%= issue.id %>"></td>
			<td class="id_issue"><%= link_to issue.id,:controller => 'issues', :action => 'show', :id =>issue.id %></td>
			<td class="status"><%= issue.status %></td>
			<td class="subject"><%= link_to issue.subject, :controller => 'issues', :action => 'show', :id =>issue.id %></td>
			<% if issue.assigned_to %>
				<td class="assignee"><%= link_to issue.assigned_to,:controller => 'users', :action => 'show', :id =>issue.assigned_to.id %></td>
			<% elsif %>
				<td class="assignee"></td>
			<% end %>
			<td class="update"><%= issue.updated_on %></td>
			<td class="estimated"><%= issue.estimated_hours %></td>
			<td class="done"><table id="done">
					<tr> <% if  issue.done_ratio == 100 %>
						<td class="done"></td>
						<% end %>
						<% if  issue.done_ratio == 0 %>
						<td class="todo"></td>
						<% end %>
						<% if  issue.done_ratio != 0 && issue.done_ratio != 100%>
						<td class="done" style="width: <%= issue.done_ratio %>px"></td>
						<td class="todo" style="width: <%= 100 - issue.done_ratio %>px"></td>
						<% end %>
					</tr>
				</table></td>
		</tr>
	</table>
</div>
