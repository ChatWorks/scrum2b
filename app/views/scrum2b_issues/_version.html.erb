<% @version .each do |version|%>
<% if !params[:select_version] || params[:select_version] && params[:select_version] == 'all' ||  params[:select_version] == 'version_working'%>
  <tr class="version_row">
		<td colspan="8"><%= version.name%></td>
	</tr>
	<% end %>

<% version.fixed_issues.each do |issue|%>
	<% if @issues %>
		<% @issues.each do |select_issue|%>
			<% if select_issue.id == issue.id %>
			<tr class="issue_row">
				<%= render :partial => "list_issues", :locals => { :issue => issue} %>
			</tr>
			<% end %>
		<% end %>
	<% else %>
	<tr class="issue_row">
		<%= render :partial => "list_issues", :locals => { :issue => issue} %>
	</tr>
	<% end %>
	<% end %>
<% end %>
