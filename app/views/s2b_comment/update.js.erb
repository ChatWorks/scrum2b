$("#detail_issue").html("<%= raw escape_javascript(@return_content) %>");
$( "#new_date_start").datepicker({
      showOn: "button",
      buttonImage: "../images/calendar.png",
      buttonImageOnly: true
    });
$( "#new_date_end").datepicker({
      showOn: "button",
      buttonImage: "../images/calendar.png",
      buttonImageOnly: true
    });
$( "#new_date_start").datepicker("option", "dateFormat", "yy-mm-dd");
$( "#new_date_end").datepicker("option", "dateFormat", "yy-mm-dd");
$('.update_issue').live("click",function(){
  $('.form_edit_issue').show();
  $('.detail_issue').hide();
  $('#history').hide();
})
$('.btn_cancel_update').live("click",function(){
  $('.form_edit_issue').hide();
  $('.detail_issue').show();
  $('#history').show();
})
$(".btn_submit_update").live("click",function(){
      $.ajax({
        url : '/s2b_issues/update',
        type : "POST",
        data : $('#form_edit').serialize(),
        dataType : "script",
        success : function() {}
      });
      return false;
    });