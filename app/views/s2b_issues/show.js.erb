$("#div_detail_issue").html("<%= raw escape_javascript(@return_content) %>");
$("#detail_issue").dialog({
  width:1000,
  modal: true,
  resizable: false,
  close: function() {
    $(this).remove();
    var select_version = $("#select_version_onboard").val();
    var select_member = $("#select_member").val();
    var project_id = '<%= @project.id %>';
    $.ajax({
      url : 'filter_issues',
      type : "POST",
      data : 'select_version=' + select_version + '&select_member=' + select_member + '&project_id=' + project_id,
      dataType : "script",
      success : function() {}
    });
    return false;
  }
});
$( "#new_date_start").datepicker({
      showOn: "button",
      buttonImage: "../images/calendar.png",
      buttonImageOnly: true
    });
$( "#new_date_end").datepicker({
      showOn: "button",
      buttonImage: "../images/calendar.png",
      buttonImageOnly: true
    });
$( "#new_date_start").datepicker("option", "dateFormat", "yy-mm-dd");
$( "#new_date_end").datepicker("option", "dateFormat", "yy-mm-dd");
$('.update_issue').live("click",function(){
  $('.form_edit_issue').show();
  $('.detail_issue').hide();
  $('#history').hide();
})
$('.btn_cancel_update').live("click",function(){
  $('.form_edit_issue').hide();
  $('.detail_issue').show();
  $('#history').show();
})
