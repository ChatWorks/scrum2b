<div class="board_issue clearfix" id="<%= issue.id %>">
  <p class="id">
    #<%= link_to issue.id,:controller => 'issues', :action => 'show', :id =>issue.id %>
  </p>
  <% if issue.status_id == @default_completed_status_id.to_i%>
  <i class="close_issue icon-remove-circle">
  <p class="text_close">
    <%= l(:label_board_issue_text_close_issue)%>
  </p></i>
  <%end%>
  <i class="edit_issue  icon-edit">
  <p class="text_edit">
    <%= l(:label_board_issue_text_edit_issue)%>
  </p> </i>
  <div class="subject">
    <p class="no_edit subject_issue" id="subject_<%= issue.id%>">
      <%= issue.subject %>
    </p>
    <input class="editing" id="input_subject_<%= issue.id%>" type="text" value="<%= issue.subject %>" name="subject_issue" />
  </div>
  
  <div class="assignee no_edit clearfix">
    <i class="icon-arrow-right" style="float: left"></i>
    <% if issue.assigned_to %>
    <p class="no_edit" id="assignee_<%= issue.id %>" style="float:left;margin: 0 5px">
      <%= link_to issue.assigned_to,:controller => 'users', :action => 'show', :id =>issue.assigned_to.id %>
    </p>
    <% end %>
    <select class="editing span5" id="select_ass_<%= issue.id %>" name="select_ass" style="float: left;margin: 0 5px 0;display: none">
      <% @member.each do |member|%>
      <% if member.id == issue.assigned_to_id %>
      <option value="<%= member.id %>" selected="selected"><%= member.firstname + ' ' + member.lastname %></option>
      <% else %>
      <option value="<%= member.id %>"><%= member.firstname + ' ' + member.lastname %></option>
      <% end %>
      <% end %>
    </select>
    <div class="no_edit" id="date_<%= issue.id %>">
      <% if issue.due_date %>
       <p  style="float: right"><%= issue.due_date%></p>
       <i class=" icon-arrow-right" style="float: right;margin: 0 5px"></i>
      <% else%>
        <% if issue.fixed_version && issue.fixed_version.ir_end_date != "" %>
           <%= issue.fixed_version.ir_end_date%>
          <i class=" icon-arrow-right" style="float: right;margin: 0 5px"></i>
          <% else %>
          <p  style="float: right"> &hellip;</p>
        <% end %>
      <% end %>
     <% if issue.start_date != ""%>
      <p style="float: right"><%= issue.start_date%></p>
      <% else %>
        <% if issue.fixed_version && issue.fixed_version.ir_start_date != "" %>
           <p style="float: right"><%= issue.fixed_version.ir_start_date%></p>
         <% else %>
          <p  style="float: right"> &hellip;</p>
        <% end %>
      <% end %>
    </div>
    <div class="editing edit_date clearfix" id="edit_date_<%= issue.id %>" value="<%= issue.id %>" style="">
     <input type="text" id="date_start_<%= issue.id %>" class="span3" value="<%= issue.start_date%>"/>
     <input type="text" id="date_end_<%= issue.id %>" class="span3" value="<%= format_date(issue.due_date)%>" />
    </div>
  </div>
  
  <% if issue.description != "" %>
  <div class="description">
    <div class="no_edit div_description" id="description_<%= issue.id %>" style="overflow: hidden"> <%= issue.description %></div>
    <textarea class="editing span12" id="text_description_<%= issue.id %>" style="display:none"><%= issue.description %></textarea>
  </div>
  <% else %>
    <div class="description">
    <textarea class="editing span12" id="text_description_<%= issue.id %>" style="display:none"><%= issue.description %></textarea>
     </div>
  <% end %>
  
  
  

  <% if issue.status_id == @default_inprogress_status_id.to_i%>
  
    <div class="slider-horizontal" id="slider<%= issue.id%>" value="<%= issue.done_ratio%>" style="margin: 0 15px 5px 0"></div>
        <p class="estimated" style="float: left">
        <%= l(:label_board_issue_time)%><span class="no_edit" id="est_<%= issue.id %>"> <%= issue.estimated_hours %></span>
      </p>
      <input class="editing input-mini" id="input_est_<%= issue.id%>" type="text" name="input_est_issue" value="<%= issue.estimated_hours %>"/>
      <input type="text" id="amount<%= issue.id%>" class="span2" style="border:0;color: #f6931f; font-weight: bold;float: right" />

   <% else %>
  <div class="progressbar" value="<%= issue.done_ratio%>" id="progress<%= issue.id%>" style="height: 12px;margin: 0 15px 5px 0"></div>
    <p class="estimated" style="float: left">
      <%= l(:label_board_issue_time)%><span class="no_edit" id="est_<%= issue.id %>"> <%= issue.estimated_hours %></span>
    </p>
    <input class="editing input-mini" id="input_est_<%= issue.id%>" type="text" name="input_est_issue" value="<%= issue.estimated_hours %>" />
  <br />
  <% end %>
  
  
  <div id="div_submit_edit_<%= issue.id%>" class="editing submit_edit_issue clearfix" value="<%= issue.id%>">
    <input type="submit" class="submit_edit" value=<%= l(:label_board_edit_btn_submit)%> >
    <input type="submit" class="cancel_edit" value=<%= l(:label_board_edit_btn_cancel)%> >
  </div>
</div>

